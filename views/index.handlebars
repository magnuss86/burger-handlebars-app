<h1>Burgers for all!</h1>



<div class='inline w-100 justify-center align-center'>
  <div class='w-50 flex justify-center align-center padding'>
    <h2>Burgers not eaten!</h2>

    <ul class="">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
    <h2>Add a Burger</h2>
    <form class="create-form add-burger padding-right">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured"></label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
      </div>

      <button type="submit">Add Burger</button>
    </form>
  <div class='w-50 justify-center align-center flex'>
    <h2>Burgers that have been devoured!</h2>
    <ul class="">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>



